<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:background="@drawable/card_bg"
    android:backgroundTint="#F7DED0">


    <ImageView
        android:id="@+id/place_image2"
        android:layout_width="161dp"
        android:layout_height="209dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/riyadh_rc"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/riyadh_rc"
        android:onClick="goToDetailsPage"/>

    <TextView
        android:id="@+id/place_name2"
        android:layout_width="177dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Discover the spirit of ancient Arabia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place_image2" />

    <TextView
        android:id="@+id/country_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Riyadh,Diriyah"
        android:textColor="#050505"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/place_name2"
        app:layout_constraintTop_toBottomOf="@+id/place_name2" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/rubik_light"
        android:text="3 Days / $1500 "
        android:textColor="#7D7C7C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/country_name2"
        app:layout_constraintTop_toBottomOf="@+id/country_name2" />
</androidx.constraintlayout.widget.ConstraintLayout>